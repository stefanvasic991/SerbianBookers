<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_marginStart="420dp"
    android:layout_gravity="end"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tvPickedVila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="Nalog Vila 1"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"/>

    <RadioGroup
        android:id="@+id/rgVila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_gravity="end">

        <RadioButton
            android:id="@+id/vila1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vila 1"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/vila2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vila 2"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/vila3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vila 3"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />

        <RadioButton
            android:id="@+id/vila4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:text="Vila 4"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />
    </RadioGroup>

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="14dp"
        android:layout_gravity="end"
        android:text="Notifikacije"
        android:enabled="true"
        android:textSize="18dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:text="Korisnička podrška" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mail_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGrayLight" />

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:padding="10dp"
        android:text="odjavi me"
        android:textAlignment="viewEnd"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />
</LinearLayout>