<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AppThemeWhite" parent="AppTheme">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorBlue</item>
    </style>

    <style name="NavTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="FontTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorText</item>

    </style>
</resources>
